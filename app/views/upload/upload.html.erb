	  		<div class="form">
			    <form class="login-form">
			    	<h2>Upload Video</h2>
			    	<input type="text" placeholder="Título"/>
			    	<textarea name="descricao" placeholder="Descrição"></textarea>
			    	<input type="text" placeholder="Url (ex.: http://youtu.be/Hfo3s8X)"/>
			    	<input type="text" placeholder="Url da tumbnail"/>
					<select class="selectpicker show-menu-arrow" data-style="btn-primary">
					  <option>Mustard</option>
					  <option>Ketchup</option>
					  <option>Relish</option>
					</select>
			    	<button>Enviar</button>		
			    	
			    </form>
		  	</div>
		</div>
  		


	    
